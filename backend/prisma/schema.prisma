generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Enums
enum PatientStatus {
  recovered
  awaiting_surgery
  on_treatment
}

enum AppointmentStatus {
  pending
  confirmation_required
  confirmed
}

enum AppointmentType {
  first_time
  follow_up
}

enum Sex {
  male
  female
}

